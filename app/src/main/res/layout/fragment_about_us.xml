<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
            app:tint="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_logo_top"/>

    <TextView
            android:id="@+id/description"
            style="@style/TextAppearance.normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:autoLink="all"
            android:text="@string/about_us"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/sendFeedBackBtn"
            style="@style/Button.purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:iconGravity="textStart"
            app:icon="@mipmap/icon_feedback"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:text="@string/send_feedback"
            app:layout_constraintTop_toBottomOf="@+id/description" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_normal"
            app:layout_constraintTop_toBottomOf="@+id/sendFeedBackBtn">


        <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_small"
                android:src="@mipmap/about_facebook" />

        <ImageView
                android:id="@+id/linkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:src="@mipmap/about_linkedin" />

        <ImageView

                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:src="@mipmap/about_twitter" />


        <ImageView
                android:id="@+id/insta"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:src="@mipmap/about_insta" />

        <ImageView
                android:id="@+id/youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:src="@mipmap/about_youtube" />
    </LinearLayout>
</LinearLayout>