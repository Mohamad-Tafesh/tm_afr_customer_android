<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_account"
        app:startDestination="@id/accountFragment">

    <fragment
            android:id="@+id/accountFragment"
            android:name="com.tedmob.africell.features.accountInfo.AccountInfoFragment"
            android:label=""
            tools:layout="@layout/fragment_account_info">
        <action
                android:id="@+id/action_accountFragment_to_editProfileFragment"
                app:destination="@id/editProfileFragment" />
        <action
                android:id="@+id/action_accountFragment_to_creditTransferFragment"
                app:destination="@id/creditTransferFragment" />
    </fragment>
    <fragment
            android:id="@+id/editProfileFragment"
            android:name="com.tedmob.africell.features.profile.EditProfileFragment"
            android:label="EditProfileFragment"
            tools:layout="@layout/fragment_edit_profile">
        <action
                android:id="@+id/action_editProfileFragment_to_changePasswordFragment"
                app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
            android:id="@+id/changePasswordFragment"
            android:name="com.tedmob.africell.features.profile.ChangePasswordFragment"
            android:label="ChangePasswordFragment"
            tools:layout="@layout/fragment_change_password"/>
    <fragment
            android:id="@+id/creditTransferFragment"
            android:name="com.tedmob.africell.features.creditTransfer.CreditTransferFragment"
            android:label="CreditTransferFragment" />
</navigation>