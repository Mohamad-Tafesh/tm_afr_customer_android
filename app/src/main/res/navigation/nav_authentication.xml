<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_authentication"
        app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.tedmob.africell.features.authentication.LoginFragment"
            tools:layout="@layout/fragment_login"
            android:label="LoginFragment">
        <action
                android:id="@+id/action_loginFragment_to_verifyPinFragment"
                app:destination="@id/verifyPinFragment" />
    </fragment>
    <fragment
            android:id="@+id/registerFragment"
            android:name="com.tedmob.africell.features.authentication.RegisterFragment"
            tools:layout="@layout/fragment_register"
            android:label="RegisterFragment">
        <action
                android:id="@+id/action_registerFragment_to_setPasswordFragment"
                app:destination="@id/setPasswordFragment" />
    </fragment>
    <activity
            android:id="@+id/mainActivity"
            tools:layout="@layout/activity_main"
            android:name="com.tedmob.africell.features.home.MainActivity"
            android:label="MainActivity" />
    <fragment
            android:id="@+id/verifyPinFragment"
            tools:layout="@layout/fragment_verification"
            android:name="com.tedmob.africell.features.authentication.VerifyPinFragment"
            android:label="VerifyPinFragment" >
        <action
                android:id="@+id/action_verifyPinFragment_to_mainActivity"
                app:destination="@id/mainActivity" />
        <action
                android:id="@+id/action_verifyPinFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
    </fragment>
    <fragment
            android:id="@+id/setPasswordFragment"
            android:name="com.tedmob.africell.features.authentication.SetPasswordFragment"
            android:label="SetPasswordFragment" >
        <action
                android:id="@+id/action_setPasswordFragment_to_mainActivity"
                app:destination="@id/mainActivity" />
    </fragment>
</navigation>