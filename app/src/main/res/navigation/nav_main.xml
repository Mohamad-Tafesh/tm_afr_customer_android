<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_main" app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.tedmob.africell.features.home.HomeFragment"
            android:label="@string/home">
        <action
                android:id="@+id/action_homeFragment_to_bundleActivity"
                app:destination="@id/bundleActivity" />
        <action
                android:id="@+id/action_homeFragment_to_lineRechargeFragment"
                app:destination="@id/lineRechargeFragment" />
        <action
                android:id="@+id/action_homeFragment_to_accountInfoActivity"
                app:destination="@id/accountInfoActivity" />
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="com.tedmob.africell.features.settings.SettingsFragment"
            android:label="@string/settings"/>
    <fragment
            android:id="@+id/helpFragment"
            android:name="com.tedmob.africell.features.help.HelpFragment"
            android:label="@string/help"
            tools:layout="@layout/fragment_help"/>
    <fragment
            android:id="@+id/faqFragment"
            android:name="com.tedmob.africell.features.faq.FaqFragment"
            android:label="@string/faq"
            tools:layout="@layout/fragment_faq"/>
    <fragment
            android:id="@+id/aboutUsFragment"
            android:name="com.tedmob.africell.features.aboutus.AboutUsFragment"
            android:label="@string/about_us"
            tools:layout="@layout/fragment_about_us"/>
    <fragment
            android:id="@+id/reportIncidentFragment"
            android:name="com.tedmob.africell.features.reportIncident.ReportIncidentFragment"
            tools:layout="@layout/fragment_report_incident"/>
    <fragment
            android:id="@+id/locationMapFragment"
            android:name="com.tedmob.africell.features.location.LocationMapFragment"
            android:label="@string/location">
        <action
                android:id="@+id/action_locationMapFragment_to_locationDetailsFragment"
                app:destination="@id/locationDetailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/locationListFragment"
            android:name="com.tedmob.africell.features.location.LocationFragment"
            android:label="@string/location">
        <action
                android:id="@+id/action_locationListFragment_to_locationDetailsFragment"
                app:destination="@id/locationDetailsFragment" />
    </fragment>
    <action
            android:id="@+id/action_global_locationMapFragment"
            app:destination="@id/locationMapFragment"
            app:launchSingleTop="false"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    <action
            android:id="@+id/action_global_locationListFragment"
            app:destination="@id/locationListFragment"
            app:launchSingleTop="false"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    <fragment
            android:id="@+id/locationDetailsFragment"
            android:name="com.tedmob.africell.features.location.LocationDetailsFragment" />
    <fragment
            android:id="@+id/servicesFragment"
            android:name="com.tedmob.africell.features.services.ServicesFragment"
            tools:layout="@layout/fragment_services">
        <action
                android:id="@+id/action_servicesFragment_to_serviceDetailsFragment"
                app:destination="@id/serviceDetailsFragment" />
    </fragment>

    <fragment
            android:id="@+id/usefulNumberFragment"
            android:name="com.tedmob.africell.features.usefulNumber.UsefulNumberFragment"
            android:label="UsefulNumberFragment" />

    <fragment
            android:id="@+id/bookNumberFragment"
            android:name="com.tedmob.africell.features.bookNumber.BookNumberFragment"
            android:label="BookNumberFragment" />

    <fragment
            android:id="@+id/termsFragment"
            android:name="com.tedmob.africell.features.terms.TermsFragment"
            android:label="TermsFragment" />

    <fragment
            android:id="@+id/customerCareFragment"
            android:name="com.tedmob.africell.features.customerCare.CustomerCareFragment"
            android:label="CustomerCareFragment" />
    <fragment
            android:id="@+id/serviceDetailsFragment"
            android:name="com.tedmob.africell.features.services.ServiceDetailsFragment"
            android:label="ServiceDetailsFragment" />
    <activity
            android:id="@+id/bundleActivity"
            tools:layout="@layout/activity_bundle"
            android:name="com.tedmob.africell.features.bundles.BundleActivity"
            android:label="BundleActivity" />
    <fragment
            android:id="@+id/SMSFragment"
            tools:layout="@layout/fragment_sms"
            android:name="com.tedmob.africell.features.sms.SMSFragment"
            android:label="SMSFragment" />
    <fragment
            android:id="@+id/lineRechargeFragment"
            android:name="com.tedmob.africell.features.lineRecharge.LineRechargeFragment"
            android:label="LineRechargeFragment" />
    <activity
            android:id="@+id/accountInfoActivity"
            android:name="com.tedmob.africell.features.accountInfo.AccountInfoActivity"
            android:label=""
            tools:layout="@layout/activity_account_info"/>

</navigation>