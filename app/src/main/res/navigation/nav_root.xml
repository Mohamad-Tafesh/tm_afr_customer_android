<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_root"
        app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="com.tedmob.africell.features.launch.SplashFragment"
            android:label="SplashFragment"
            tools:layout="@layout/fragment_splash">
        <action
                android:id="@+id/action_splashFragment_to_mainActivity"
                app:destination="@+id/mainActivity"
                app:popUpTo="@+id/nav_root" />
        <action
                android:id="@+id/action_splashFragment_to_authenticationActivity"
                app:destination="@id/authenticationActivity" />
    </fragment>
    <activity
            android:id="@+id/mainActivity"
            android:name="com.tedmob.africell.features.home.MainActivity"
            android:label="MainActivity"
            tools:layout="@layout/activity_main" />
    <fragment
            android:id="@+id/pushFragment"
            android:name="com.tedmob.africell.features.launch.PushFragment"
            android:label="PushFragment">
        <argument
                android:name="notificationData"
                app:argType="com.tedmob.africell.notification.NotificationData" />
    </fragment>
    <activity
            android:id="@+id/authenticationActivity"
            android:name="com.tedmob.africell.features.authentication.AuthenticationActivity"
            android:label="AuthenticationActivity" />

</navigation>