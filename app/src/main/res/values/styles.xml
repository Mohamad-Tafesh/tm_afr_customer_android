<resources>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bgdColor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/nexa_regular</item>
        <item name="loadingViewStyle">@style/Blocks.LoadingView</item>
        <item name="materialSpinnerStyle">@style/MaterialSpinnerStyle</item><!--has to be declared-->
        <item name="materialDateInputStyle">@style/MaterialSpinnerStyle</item><!--has to be declared-->
    </style>

    <style name="MaterialSpinnerStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--<item name="contentStyle">@style/TextInputEditTextStyle</item>-->
    </style>

    <style name="Blocks" parent="@style/AppThemeBase" />

    <style name="Blocks.ToolbarLayout">
        <item name="toolbar">@layout/toolbar_default</item>
    </style>

    <style name="Blocks.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Toolbar.transparent">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:gravity">center_vertical
        </item><!--Added because material component needs it-->
    </style>

    <style name="Blocks.LoadingView">
        <item name="isLoading">true</item>
        <item name="message">@string/error_unexpected</item>
        <item name="messageTextColor">@color/black</item>
        <item name="displayMessage">true</item>
        <item name="displayButton">true</item>
        <item name="buttonText">@string/retry</item>
        <item name="displayImage">false</item>

        <item name="loadingFrameLayout">@layout/loading_frame_default</item>
    </style>

    <style name="AppTheme" parent="@style/AppThemeBase"></style>

    <style name="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/bgd_app_start</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:gravity">center_vertical
        </item><!--Added because material component needs it-->
    </style>

    <style name="Button.purple" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.purple.small" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="paddingStart">@dimen/spacing_normal</item>
        <item name="paddingEnd">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.yellow.small" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="paddingStart">@dimen/spacing_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.yellow" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button.strokeViolet" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/purple</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <!--        <item name="fontFamily">@font/sourcesanspro_bold</item>-->
    </style>

    <style name="TextAppearance.big.title" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nexa_bold</item>
    </style>

    <style name="TextAppearance.normal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nexa_regular</item>
    </style>

    <style name="TextAppearance.normalBold" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nexa_bold</item>
    </style>

    <style name="TextInputLayout.grey" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:textColorHint">@color/grey_700</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey_700</item>

        <!--        <item name="boxStrokeColor">@color/yellowMain</item>-->
        <item name="boxCornerRadiusBottomEnd">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/field_corner_radius</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">@dimen/spacing_tiny</item>
    </style>


    <style name="TextInputEditText.violet" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="background">@drawable/violet_stroke_field</item>
        <item name="android:background">@drawable/violet_stroke_field</item>
        <item name="hintTextColor">@color/black</item>
    </style>
    <style name="TextInputEditText.grey" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="background">@drawable/stroke_grey</item>
        <item name="android:background">@drawable/stroke_grey</item>
        <item name="hintTextColor">@color/black</item>
    </style>


    <style name="TextInputLayout.SearchView.Purple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/darkPink</item>
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/field_corner_radius</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="Widget.MaterialComponents.StrokeViolet" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/purple</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="cornerRadius">@dimen/field_corner_radius</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.DialogSpinnerMode" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/AppTheme.DatePickerSpinnerMode</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DatePickerSpinnerMode" parent="android:Widget.Material.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="bottomNavigationTextStyle">
        <item name="android:ellipsize">none</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.small" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/nexa_regular</item>
    </style>
</resources>
